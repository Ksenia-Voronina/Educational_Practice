<Page x:Class="testLab.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testLab"
      mc:Ignorable="d" Background="LightBlue"
      d:DesignHeight="150" d:DesignWidth="350"
      Title="Autorization">

    <Grid Height="150" Width="350">
        <TextBlock Text="Введите имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,18,0,0" FontSize="20"/>
        <TextBox x:Name="name" VerticalAlignment="Top" Margin="133,24,96,0" Height="21"/>
        <TextBlock Text="Выберите вариант:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="10,44,0,0"/>
        <ComboBox x:Name="variant" VerticalAlignment="Top" Margin="189,50,40,0" Height="21"/>
        <Button x:Name="input" Content="ВОЙТИ" Width="70" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,104,0,0" Click="input_Click" Background="LightSalmon"/>

    </Grid>
</Page>
