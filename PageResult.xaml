<Page x:Class="testLab.PageResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testLab"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageResult">

    <Grid Height="450" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tb" Text="Ваши результы" FontSize="27" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="exit" Content="ВЫЙТИ" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 0, 20, 0" Click="exit_Click" Background="LightSalmon"/>
        <DataGrid x:Name="datagrid" Grid.Row="1" Background="LightBlue"/>
    </Grid>
</Page>
